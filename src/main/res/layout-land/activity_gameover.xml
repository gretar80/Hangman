<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.s198586.hangman.Vinn"
    android:background="#333333"
    android:id="@+id/layoutSpill">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bildeView"
        android:minWidth="85px"
        android:minHeight="110px"
        android:layout_below="@+id/labelAntallVinn"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/ottende" />

    <TextView
        android:text="@string/gameover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textColor="#ff9600"
        android:id="@+id/gameover"
        android:layout_below="@+id/labelNoSpacing"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vinnLabel"
        android:id="@+id/labelVinn"
        android:textColor="#fff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tapLabel"
        android:id="@+id/labelTap"
        android:textColor="#fff"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelAntallVinn"
        android:textColor="#fff"
        android:gravity="left"
        android:layout_below="@+id/labelVinn"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelAntallTap"
        android:textColor="#fff"
        android:gravity="right"
        android:layout_below="@+id/labelTap"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelNoSpacing"
        android:textColor="#fff"
        android:textSize="25dp"
        android:layout_below="@+id/labelTap"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nyttSpill"
        android:background="@drawable/spill_stor"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/gameover"
        android:layout_toStartOf="@+id/gameover" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/avslutte"
        android:background="@drawable/avslutte_stor"
        android:layout_below="@+id/gameover"
        android:layout_toEndOf="@+id/gameover" />

</RelativeLayout>


